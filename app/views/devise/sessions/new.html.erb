<%= title t(".login") %>
<div id="signIn" class="mainContainer400px">
	<div id="top">
		<span class="indent40 alphabet">Script's World</span>
		<h1 class="indent40"><%= yield :title %></h1>
	</div>
	<div class="grid1 indent40">
		<p> </p>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  		<div><%= f.label :email %><br />
  		<%= f.email_field :email, :class => "textField"%></div>

  		<div><%= f.label :password %><br />
  		<%= f.password_field :password , :class =>"textField"%></div>

  		<% if devise_mapping.rememberable? -%>
    		<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  			<% end -%>

  			<div><%= f.submit "Sign in", :class => "button right" %></div>
			<% end %>

<%= render :partial => "devise/shared/links" %>
	</div>
</div>