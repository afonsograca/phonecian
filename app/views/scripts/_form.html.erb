<%= form_for(@script) do |f| %>
  <% if @script.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@script.errors.count, "error") %> <%= t('.prohibited_this_script_from_being_saved') %></h2>

      <ul>
      <% @script.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
    <%= f.label t('.script_name') %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t('.begin_period') %><br />
    <%= f.text_field :beginPeriod %>
  </div>
  <div class="field">
    <%= f.label t('.end_period') %><br />
    <%= f.text_field :endPeriod %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
